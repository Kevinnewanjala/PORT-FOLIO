@* Skills Section *@
<section id="skills" class="fade-in" style="padding: 60px 20px; text-align: center; background-color: #ffffff;">
    <h2 style="font-size: 36px; margin-bottom: 20px;">Skills</h2>
    <p style="font-size: 18px; color: #333;">I specialize in C#, ASP.NET Core, React, and more, building full-stack applications that solve real-world problems.</p>

    <!-- Skill Cards Container -->
    <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px; max-width: 1200px; margin: 0 auto;">
        <!-- Front-End Skills Card -->
        <div style="flex: 1 1 300px; padding: 20px; border-radius: 10px; background: rgba(255, 255, 255, 0.3); box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); position: relative; display: flex; flex-direction: column; justify-content: space-between;">
            <h3 style="font-size: 2.5rem; margin-bottom: 15px; color: #4CAF50; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);">Front-End Skills</h3>
            <ul style="list-style: none; padding: 0; font-size: 1.2rem; line-height: 1.6; margin: 0; flex: 1; display: flex; flex-direction: column; justify-content: space-around;">
                <li>HTML</li>
                <li>CSS</li>
                <li>Bootstrap</li>
                <li>JavaScript</li>
                <li>React.js (JavaScript library)</li>
            </ul>
        </div>

        <!-- Back-End Skills Card -->
        <div style="flex: 1 1 300px; padding: 20px; border-radius: 10px; background: rgba(255, 255, 255, 0.3); box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); position: relative; display: flex; flex-direction: column; justify-content: space-between;">
            <h3 style="font-size: 2.5rem; margin-bottom: 15px; color: #1E90FF; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);">Back-End Skills</h3>
            <ul style="list-style: none; padding: 0; font-size: 1.2rem; line-height: 1.6; margin: 0; flex: 1; display: flex; flex-direction: column; justify-content: space-around;">
                <li>Python</li>
                <li>SQL</li>
                <li>Flask</li>
                <li>Node.js (JavaScript runtime)</li>
            </ul>
        </div>

        <!-- Database Skills Card -->
        <div style="flex: 1 1 300px; padding: 20px; border-radius: 10px; background: rgba(255, 255, 255, 0.3); box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); position: relative;">
            <h3 style="font-size: 2.5rem; margin-bottom: 15px; color: #FF6347; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);">Database Skills</h3>
            <ul style="list-style: none; padding: 0; font-size: 1.2rem; line-height: 1.6; margin: 0; flex: 1; display: flex; flex-direction: column; justify-content: space-around;">
                <li>SQLite</li>
                <li>SQLAlchemy (ORM for SQL databases)</li>
            </ul>
        </div>
    </div>
</section>
