@{
    ViewData["Title"] = "Education - Kevin Wanjala";
}

<!-- Education Section -->
<section id="education" style="padding: 60px 20px; text-align: center; background-color: #ffffff;">
    <h2 style="
        font-size: 36px; 
        font-weight: bold; 
        margin-bottom: 20px; 
        color: #333; 
        text-transform: uppercase;
        letter-spacing: 1px;
        font-family: 'Roboto', sans-serif;
    ">
        Education
    </h2>
    
    <h4 style="
        font-size: 24px; 
        font-weight: 600; 
        color: #4CAF50; 
        margin-bottom: 10px;
        font-family: 'Montserrat', sans-serif;
    ">
        Software Engineering
    </h4>

    <p style="
        font-size: 18px; 
        color: #555; 
        margin-bottom: 10px; 
        font-family: 'Arial', sans-serif;
        letter-spacing: 0.5px;
    ">
        Moringa School
    </p>

    <p style="
        font-size: 18px; 
        color: #777; 
        font-style: italic; 
        font-family: 'Arial', sans-serif;
    ">
        February 2024 - November 2024
    </p>

    <!-- View Resume Button -->
    <div style="margin-top: 30px;">
        <a href="https://drive.google.com/file/d/10Sd_D9wG00hRnlGNDzPTe-71pK3-p3m1/view" target="_blank" style="text-decoration: none;">
            <button style="
                background-color: #1E90FF; 
                color: #fff; 
                padding: 12px 24px; 
                font-size: 1rem; 
                font-family: 'Arial', sans-serif; 
                font-weight: bold; 
                border: none; 
                border-radius: 25px; 
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
                cursor: pointer; 
                transition: transform 0.3s, background-color 0.3s;
            " 
            onmouseover="this.style.backgroundColor='#007ACC'; this.style.transform='scale(1.05)';" 
            onmouseout="this.style.backgroundColor='#1E90FF'; this.style.transform='scale(1)';">
                View My Resume
            </button>
        </a>
    </div>
</section>
