<!-- Add Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Function to detect when an element is in the viewport and add the "visible" class
    function fadeInOutOnScroll() {
        const elements = document.querySelectorAll('.fade-in');
        elements.forEach(element => {
            const rect = element.getBoundingClientRect();
            if (rect.top <= window.innerHeight && rect.bottom >= window.innerHeight * 0.25) {
                element.classList.add('visible');
            } else {
                element.classList.remove('visible');
            }
        });
    }

    window.addEventListener('scroll', fadeInOutOnScroll);
    window.addEventListener('load', fadeInOutOnScroll);
</script>

<style>
    /* Navbar Styles */
    .fixed-navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: transparent; /* Transparent background */
        padding: 15px 0;
        z-index: 1000;
    }

    .fixed-navbar a {
        text-decoration: none;
        font-family: 'Poppins', sans-serif;
        font-size: 16px;
        font-weight: bold; /* Bold text */
        transition: all 0.3s ease; /* Smooth transitions */
        padding: 10px 15px;
        border-radius: 5px;
        margin: 0 10px;
        display: inline-block;
    }

    /* Alternating colors */
    .nav-button.green {
        color: #fff;
        background-color: #28a745; /* Green */
    }

    .nav-button.blue {
        color: #fff;
        background-color: #007bff; /* Blue */
    }

    .nav-button.orange {
        color: #fff;
        background-color: #fd7e14; /* Orange */
    }

    .fixed-navbar a:hover {
        filter: brightness(1.2); /* Brighten on hover */
        transform: scale(1.1); /* Slight zoom effect */
    }

    /* Fade-in and fade-out effect */
    .fade-in {
        opacity: 0;
        transition: opacity 4s ease-in-out;
    }

    .fade-in.visible {
        opacity: 1;
    }

    /* Ensure initial content is visible */
    #home {
        opacity: 1;
    }

    /* Add padding to body to avoid content hiding behind navbar */
    body {
        padding-top: 80px;
    }
</style>
